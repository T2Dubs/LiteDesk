<UserControl x:Class="LiteDesk.ClientInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LiteDesk"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="1000"
             FontFamily="Segoe UI" Foreground="#eeeeee">
    <Grid>
        <Border x:Name="ClientPanel"
                MaxWidth="1000"
                Background="#2b2b3d">
            <Grid Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" Grid.Column="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="4*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="Client Info" FontSize="18" FontWeight="Bold" Margin="0 0 0 20" />
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Name" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,4" VerticalAlignment="Center"/>
                    <TextBox Style="{StaticResource ModernTextBox}"
                             x:Name="ClientName" Margin="0,0,10,0"
                             Grid.Row="1" Grid.Column="1"
                             LostFocus="ClientName_LostFocus"/>
                    <TextBlock x:Name="DuplicateNameWarning"
                             Foreground="OrangeRed" FontSize="12"
                             Grid.Row="2" Grid.Column="1"
                             Margin="8,0,0,4"/>
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Phone" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,4" VerticalAlignment="Center"/>
                    <TextBox Style="{StaticResource ModernTextBox}" 
                             x:Name="ClientPhone" Margin="0,0,10,0"
                             Grid.Row="3" Grid.Column="1"
                             LostFocus="Phone_LostFocus"/>
                    <TextBlock x:Name="DuplicatePhoneWarning"
                               Foreground="OrangeRed" FontSize="12"
                               Grid.Row="4" Grid.Column="1"
                               Margin="8,0,0,4"/>
                    <TextBlock Grid.Row="5" Grid.Column="0" Text="Email" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,4" VerticalAlignment="Center"/>
                    <TextBox Style="{StaticResource ModernTextBox}" 
                             x:Name="ClientEmail" Margin="0,0,10,0" 
                             Grid.Row="5" Grid.Column="1"
                             LostFocus="Email_LostFocus"/>
                    <TextBlock x:Name="DuplicateEmailWarning"
                               Foreground="OrangeRed" FontSize="12"
                               Grid.Row="6" Grid.Column="1"
                               Margin="8,0,0,4"/>
                </Grid>
                <Grid Margin="10,0,0,0" Grid.Column="1" Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="4*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="Client Address" FontSize="18" FontWeight="Bold" Margin="0 0 0 20" />
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Address 1" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,4" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="1" Grid.Column="1" Style="{StaticResource ModernTextBox}" x:Name="Address1"/>
                    <TextBlock Grid.Row="2" FontSize="12" Margin="8,0,0,4"/>
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Address 2" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,4" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="3" Grid.Column="1" Style="{StaticResource ModernTextBox}" x:Name="Address2"/>
                    <TextBlock Grid.Row="4" FontSize="12" Margin="8,0,0,4"/>
                    <TextBlock Grid.Row="5" Grid.Column="0" Text="City" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,4" VerticalAlignment="Center"/>
                    <Grid Grid.Row="5" Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0" Style="{StaticResource ModernTextBox}" x:Name="City" Margin="0 0 5 0" />
                        <TextBlock Grid.Column="1" Text="State" FontSize="14" FontWeight="SemiBold" Margin="0,0,4,4" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                        <TextBox Grid.Column="2" Style="{StaticResource ModernTextBox}" x:Name="State" Margin="0 0 5 0"/>
                        <TextBlock Grid.Column="3" Text="Zip" FontSize="14" FontWeight="SemiBold" Margin="0,0,4,4" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                        <TextBox Grid.Column="4" Style="{StaticResource ModernTextBox}" x:Name="Postal" Margin="0 0 5 0"/>
                    </Grid>
                </Grid>
                <Grid Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="4*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Notes" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,4"/>
                    <RichTextBox Grid.Row="0" Grid.Column="1"
                                Background="#1e1e2f" Foreground="White" BorderBrush="#555"
                                x:Name="ClientNotes" VerticalScrollBarVisibility="Auto"
                                AcceptsReturn="True" Margin="0 0 0 20"/>
                    <Button Content="Deactivate Client" Click="DeactivateClient_Click" x:Name="DeactivateButton"
                            Margin="0,0,10,0" Style="{StaticResource ModernButtonStyle}" Background="DarkRed"
                            Grid.Row="1" Grid.Column="0" Visibility="Hidden"/>
                    <StackPanel Grid.Row="1" Grid.Column="1"  Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Cancel" Click="CancelClient_Click" Margin="0,0,10,0" Style="{StaticResource ModernButtonStyle}"/>
                        <Button Content="Save" Click="SaveClient_Click" Style="{StaticResource ModernButtonStyle}"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
        <Grid x:Name="DeactivateConfirmOverlay"
              Background="#AA000000"
              Visibility="Collapsed"
              Panel.ZIndex="99">
            <Border Width="400" Padding="20" CornerRadius="8"
                    Background="#2b2b3d" BorderBrush="#444" BorderThickness="1"
                    HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel>
                    <TextBlock Text="Are you sure you want to deactivate this client?"
                               FontWeight="Bold" FontSize="16" TextWrapping="Wrap" Margin="0,0,0,8"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="This action is irreversable.  To proceed, type '"
                                   TextWrapping="NoWrap" Margin="0,0,0,12"/>
                        <TextBlock Text="{Binding Name}"
                                   TextWrapping="NoWrap" Margin="0,0,0,12"/>
                        <TextBlock Text="' below."
                                   TextWrapping="NoWrap" Margin="0,0,0,12"/>
                    </StackPanel>
                    <TextBox x:Name="ConfirmNameInput"
                             Style="{StaticResource ModernTextBox}" Margin="0,0,0,12"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Cancel" Style="{StaticResource ModernButtonStyle}" Margin="0,0,8,0"
                                Click="CancelDeactivate_Click"/>
                        <Button Content="Proceed" Style="{StaticResource ModernButtonStyle}" Background="DarkRed"
                                Click="ProceedDeactivate_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>