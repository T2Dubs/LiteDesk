<UserControl x:Class="LiteDesk.CallLogInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LiteDesk"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="1000"
             FontFamily="Segoe UI" Foreground="#eeeeee">
    <Grid>
        <Border x:Name="CallLogPanel"
                    MaxWidth="1000"
                    Background="#2b2b3d">
            <Grid Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="8*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Text="Call Log Info" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>
                <TextBlock Grid.Column="0" Grid.Row="1" Text="Summary: " FontSize="14" FontWeight="SemiBold" Margin="0,0,0,4"/>
                <RichTextBox Grid.Column="1" Grid.Row="1"
                             Background="#1e1e2f" Foreground="White" BorderBrush="#555"
                             x:Name="Summary" VerticalScrollBarVisibility="Auto"
                             FontSize="14"
                             AcceptsReturn="True" Margin="0,0,0,20" IsReadOnly="True"/>
                <TextBlock Grid.Column="0" Grid.Row="2" Text="Call Date: " FontSize="14" FontWeight="SemiBold" Margin="0,0,0,4" VerticalAlignment="Center"/>
                <TextBox Grid.Column="1" Grid.Row="2" x:Name="CallDate" Margin="0 0 5 10" IsReadOnly="True" Style="{StaticResource ModernTextBox}"/>
                <TextBlock Grid.Column="0" Grid.Row="3" Text="Created Date: " FontSize="14" FontWeight="SemiBold" Margin="0,0,0,4" VerticalAlignment="Center"/>
                <TextBox Grid.Column="1" Grid.Row="3" x:Name="CreatedDate" Margin="0 0 5 10" IsReadOnly="True" Style="{StaticResource ModernTextBox}"/>
                <TextBlock Grid.Column="0" Grid.Row="4" Text="Contact Method: " FontSize="14" FontWeight="SemiBold" Margin="0,0,0,4" VerticalAlignment="Center"/>
                <TextBox Grid.Column="1" Grid.Row="4" x:Name="ContactMethod" Margin="0 0 5 10" IsReadOnly="True" Style="{StaticResource ModernTextBox}"/>
                <Button Grid.Column="2" Grid.Row="5" Content="Close" Click="Close_Click" Style="{StaticResource ModernButtonStyle}"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
